<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:fitsSystemWindows="false">

    <com.teleteh.xplayer2.player.OuToSbsGlView
        android:id="@+id/presentationGlView"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- SBS mirrored controls overlay for ultrawide external display -->
    <com.teleteh.xplayer2.ui.SbsMirrorLayout
        android:id="@+id/mirrorRoot"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.media3.ui.PlayerView
                android:id="@+id/presentationPlayerView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                app:surface_type="none"
                app:use_controller="true"
                app:show_buffering="when_playing" />

        </FrameLayout>
    </com.teleteh.xplayer2.ui.SbsMirrorLayout>

</FrameLayout>
